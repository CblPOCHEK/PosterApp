<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="139dp"
                android:layout_height="336dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cat1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#E62121"
                android:gravity="center"
                android:text="Hello, IS-31"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#ECE4E4"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="442dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/aaa" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#2EBA1E"
                android:gravity="center"
                android:text="Hello, IS-32"
                android:textAllCaps="false"
                android:textColor="#6E4646"
                android:textColorHighlight="#ECE4E4"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/cat2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#6B1DBA"
                android:gravity="center"
                android:text="Hello, IS-33"
                android:textAllCaps="false"
                android:textColor="#11B336"
                android:textColorHighlight="#ECE4E4"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>